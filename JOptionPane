//		 JOptionPane.showMessageDialog(null, "You are awesome dude", "Commending", JOptionPane.YES_NO_CANCEL_OPTION);
		int response = JOptionPane.showConfirmDialog(null, "Do you have a Job", "CAREER", JOptionPane.YES_NO_CANCEL_OPTION);
		
		if(response == JOptionPane.YES_OPTION) {
			JOptionPane.showMessageDialog(null, "You are employeed!");
		}
		else if(response == JOptionPane.NO_OPTION) {
			JOptionPane.showMessageDialog(null, "You are Unemployeed!");
		}
		else if(response == JOptionPane.CANCEL_OPTION) {
			JOptionPane.showMessageDialog(null, "No answer provided");
		}
		else {
			System.out.println("Invalid input");
		}
	}

}
