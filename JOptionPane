	public static void main(String[] args) {
		// TODO Auto-generated method stub

//		JOptionPane.showMessageDialog(null, "HELP! HELP!", "CAUTION", JOptionPane.WARNING_MESSAGE);
//		JOptionPane.showMessageDialog(null, "Get Education", "ADVICE", JOptionPane.INFORMATION_MESSAGE);
